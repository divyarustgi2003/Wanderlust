<% layout('/layouts/boilerplate') -%>
<body>
    <h3 class="mt-3">Create a New Listing</h3>
    <div class = "row">
        <div class="col-8 offset-2">
    <form action="/listings" method="POST" novalidate class = "needs-validation">
       <div class = "mb-3 mt-3">
         <label for="title" class="form-label">Title</label>
        <input type="text" name = "listing[title]" placeholder="write the name of your place" required class="form-control">
    </div>
        <div>
            <label for="description" class="form-label">Description </label>
        <textarea name="listing[description]" id="description"  placeholder="write your description here" class="form-control"></textarea>
    </div>
       <div class = "mb-3">
        <label for="image" class="form-label">Image</label>
        <input type="text"name="listing[image]" placeholder="enter image URL" class="form-control">
    </div>
      <div>
        <label for="price" class="form-label">Price</label>
        <input type="number" name = "listing[price]" placeholder="enter price" class="form-control">
    </div>
    <div class = "mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" name = "listing[location]" placeholder="enter location" class = "form-control">
    </div>
    <div class = "mb-3">
        <label for="country" class="form-label">Country</label>
        <input type="text" name = "listing[country]" placeholder="enter country">
    </div>
        <button class="btn btn-dark mb-3 add-btn">Add</button>
    </form>
    </div>
    </div>

</body>
