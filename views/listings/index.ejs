
<% layout('/layouts/boilerplate') -%>

<body>
  <%= success %> </h1>
    <h1>All listings</h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1"> 
    <% for(let list of allListings) {%>
      
    <div class="card col" style="width: 18rem;">
      <a href="/listings/<%= list._id %>" >
        <img src="<%= list.image.url %>" class="card-img-top" style="height: 30rem; width: 30rem;" alt=" <%= list.image.filename%>">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <h5 class="card-title"><b> <%= list.title %></b> <br> &#8377; <%=  list.price.toLocaleString('en-IN') %></h5>
          <p class="card-text"> <%= list.description %></p>
          </a>
        </div>
      </div>
      <% }  %> 
</div>
  
  
   
</body>
