<% layout('/layouts/boilerplate') -%>
<body>
       
       <div class="row">
              <div class="col-8 offset-2">
                     <h1>This is your Listing:</h1>
       <div class="card" style="width: 18rem;">
              <img class="card-img-top show-img" src="<%= listing.image.url %>" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><b><%=listing.title%></b></h5>
                <p class="card-text"><%= listing.description %> <br>
                     &#8377; <%=  listing.price.toLocaleString('en-IN') %> <br>
                     <%= listing.location  %> <br>
                     <%=  listing.country %> <br>
              </p>
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark a-edit mt-3">Edit</a>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                     <button class="btn btn-dark mb-3 delete-btn mt-3">DELETE</button></form>
       
              </div>
            </div>
            </div>
             </div>
